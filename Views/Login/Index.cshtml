        alt="">
</div>

<div class="container text-center">
    <form asp-action="Login" asp-controller="Login" method="post" class="form">
        <p class="form-title">Inicia Sesión</p>
        <div class="input-container">
            <input type="text" id="NIT" placeholder="Ingresa el NIT" asp-for="NIT" />
        </div>
        <div class="input-container">
            <input type="password" id="Password" placeholder="Ingresa contraseña" asp-for="Password" />
        </div>
        <button class="btn btn-primary" type="submit">Ingresar</button>
    </form>
</div>

@if (!string.IsNullOrEmpty(TempData["Message"]?.ToString()))
{
    <div class="mt-2 text-center" style="color: rgb(185, 22, 22);">@TempData["Message"]</div>
}