@{
    ViewData["Title"] = "Hospital La Misericordia";
}

<div>
    <a class="btn btn-dark"  asp-controller="Login" asp-action="Logout">Salir</a>
</div>
<div class="text-center">
    <h1 class="display-4">TURNO ÁGIL</h1>
    <h3>Bienvenido </h3>
    <h2>
        ASESOR
    </h2>
    <p>ASIGNACIÓN DE TURNOS</p>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h2 class="text-center">Turnos en pantalla</h2>
            <ul class="turnos-list text-center">
                <table class="table table-dark">
                    <tr>
                        <td>Servico</td>
                        <td>Turno</td>
                        <td>Tipo Documento</td>
                        <td>Documento</td>
                        <td>Acciones</td>
                    </tr>
                    @foreach(var turno in Model){
                        <tr>
                            <td>@turno.Servicio</td>
                            <td>@turno.NumeroTurno</td>
                            <td>@turno.TipoDocumento</td>
                            <td>@turno.Documento</td>
                            <td>
                                <a asp-controller="Asesores" asp-action="DeleteUser" asp-route-id="@turno.ID" class="btn btn-danger">Finalizar</a>
                            </td>
                        </tr>
                    }
                </table>
            </ul>
        </div>
        <div class="col-md-6">
            <h2 class="text-center">Pasar Turno</h2>
            <div class="botones-contenedor">
                <button class="boton-elegante">Siguiente en Fila</button>
                <button class="boton-elegante">Información General (IG)</button>
                <button class="boton-elegante">Pago de Facturas (PF)</button>
                <button class="boton-elegante">Autorización de Medicamentos (AM)</button>
                <button class="boton-elegante">Solicitud de Cita Médica (CM)</button>
            </div>
        </div>
    </div>
</div>