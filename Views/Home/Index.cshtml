@{
    ViewData["Title"] = "Hospital La Misericordia";
}


<div class="container align-content-center">
    <h1 class="d-flex m-auto justify-content-center">Turno Ágil</h1>
    <h4 class="d-flex m-auto justify-content-center">Hospital la Misericordia</h4>
    <img src="../wwwroot/img/hospital.png" alt="Hospital la Misericordia" style="width: 200px;">
    <div class="row mt-5">
        <div class="col">
            <fieldset>
                <legend>Selecciona el tipo de documento:</legend>

                <div>
                    <input type="radio" name="TipoDocumento" value="Cedula de Ciudadanía" checked />
                    <label for="Cedula de Ciudadanía">Cedula de Ciudadanía</label>
                </div>

                <div>
                    <input type="radio"  name="TipoDocumento" value="Visa" />
                    <label for="Visa">Visa</label>
                </div>

                <div>
                    <input type="radio"  name="TipoDocumento" value="Pasaporte" />
                    <label for="Pasaporte">Pasaporte</label>
                </div>

                <div>
                    <input type="radio"  name="TipoDocumento" value="Cedula de Extranjería" />
                    <label for="Cedula de Extranjería">Cedula de Extranjería</label>
                </div>
            </fieldset>
        </div>
        <div class="col">
            <form asp-action=""> @* Que mande a la base de datos *@
                <fieldset>
                    <legend>Número de documento:</legend>
                    <input type="text" name="NumeroDocumento" />
                    <button class="btn btn-info" type="submit" asp-controller="Asesores" asp-action="Servicio">Solicitar</button>
                </fieldset>
            </form>
        </div>
    </div>
</div>